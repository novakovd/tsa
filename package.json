{
  "name": "tsa",
  "description": "Text sharing app",
  "scripts": {
    "db:migration:run": "DATABASE_URL=file:../data/prod.db npx prisma migrate deploy",
    "db:init:client": "npx prisma generate",
    "db:run:all": "npm run db:migration:run && npm run db:init:client",
    "build:all": "npm run build:server && npm run build:frontend",
    "build:server": "tsc",
    "build:frontend": "webpack --mode=production",
    "start": "node dist/server/app.js",
    "start:dev": "concurrently \"npx tsc --watch\" \"nodemon -q dist/server/app.js\"",
    "lint": "eslint --fix . && prettier --write .",
    "tests:run": "npx cypress run --headless --browser chrome"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@prisma/client": "^4.11.0",
    "autoprefixer": "^10.4.14",
    "body-parser": "^1.20.2",
    "dotenv": "^16.0.3",
    "dotenv-defaults": "^5.0.2",
    "express": "^4.18.2",
    "http-status-codes": "^2.2.0",
    "joi": "^17.9.0",
    "minify": "^9.2.0",
    "nanoid": "^3.3.4",
    "postcss": "^8.4.21",
    "postcss-cli": "^10.1.0",
    "pug": "^3.0.2",
    "qrcode": "^1.5.1",
    "readable-http-codes": "^1.1.1",
    "reflect-metadata": "^0.1.13",
    "tailwindcss": "^3.2.7",
    "typedi": "^0.10.0",
    "webpack": "^5.76.2",
    "webpack-cli": "^5.0.1",
    "winston": "^3.8.2"
  },
  "devDependencies": {
    "@prettier/plugin-pug": "^2.4.1",
    "@types/body-parser": "^1.19.2",
    "@types/dotenv-defaults": "^2.0.1",
    "@types/express": "^4.17.17",
    "@types/node": "^18.15.3",
    "@types/pug": "^2.0.6",
    "@types/qrcode": "^1.5.0",
    "@typescript-eslint/eslint-plugin": "^5.55.0",
    "@typescript-eslint/parser": "^5.55.0",
    "build-hash-webpack-plugin": "^1.0.4",
    "compression": "^1.7.4",
    "concurrently": "^7.6.0",
    "cross-env": "^7.0.3",
    "css-loader": "^3.6.0",
    "css-minimizer-webpack-plugin": "^4.2.2",
    "cypress": "^12.8.1",
    "eslint": "^8.36.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-prettier": "^8.7.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-prettier": "^4.2.1",
    "mini-css-extract-plugin": "^2.7.5",
    "nodemon": "^2.0.21",
    "postcss-loader": "^7.1.0",
    "prettier": "^2.8.7",
    "prisma": "^4.11.0",
    "sass-loader": "^13.2.1",
    "serve-static": "^1.15.0",
    "style-loader": "^1.3.0",
    "ts-loader": "^9.4.2",
    "typescript": "^5.0.2"
  }
}
