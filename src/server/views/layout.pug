head
  meta(charset="utf-8")
  meta(http-equiv="x-ua-compatible", content="ie=edge")
  meta(name="viewport", content="width=device-width, initial-scale=1")
  meta(name="msapplication-TileColor", content="#da532c")
  meta(name="theme-color", content="#ffffff")
  title Text sharing app
  link(
    rel="apple-touch-icon",
    sizes="180x180",
    href="icons/apple-touch-icon.png"
  )
  link(
    rel="icon",
    type="image/png",
    sizes="32x32",
    href="icons/favicon-32x32.png"
  )
  link(
    rel="icon",
    type="image/png",
    sizes="16x16",
    href="icons/favicon-16x16.png"
  )
  link(rel="manifest", href="icons/site.webmanifest")
  link(rel="mask-icon", href="icons/safari-pinned-tab.svg", color="#5bbad5")
  link(
    rel="stylesheet",
    href="/assets/app.min.css?v=" + process.env.WEBPACK_BUILD_HASH
  )
  block scripts
body.bg-gray-100.font-sans.leading-normal.tracking-normal
  nav#header.fixed.w-full.z-10.top-0
    .w-full.mx-auto.flex.flex-wrap.items-center.justify-between.mt-0.py-3(
      class="md:max-w-4xl"
    )
      .pl-4
        a.text-gray-900.text-base.no-underline.font-extrabold.text-xl(
          class="hover:no-underline",
          href="/"
        )
          | TSA
      #nav-content.bg-gray-100.z-20.flex.w-auto.mt-0(
        class="lg:items-center lg:block md:bg-transparent"
      )
        ul.list-reset.justify-end.flex-1.items-center(class="lg:flex")
          li.mr-3
            a.inline-block.text-gray-600.no-underline.py-2.px-4(
              class="hover:text-gray-900 hover:text-underline",
              target="_blank",
              href="https://github.com/novakovd/tsa"
            ) GitHub
  #main-app-container.container.w-full.mx-auto.pt-20(class="md:max-w-4xl")
    .w-full.px-4.text-xl.text-gray-800.leading-normal(class="md:px-6")
      block content
